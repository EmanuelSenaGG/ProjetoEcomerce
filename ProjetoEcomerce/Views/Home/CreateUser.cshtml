@model ProjetoEcomerce.Models.UsuarioModel
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger esmaeceralert">@ViewBag.ErrorMessage</div>
}
<style>
    .btn-color {
        background-color: #0e1c36;
        color: #fff;
    }

    .erro{
        color:red;
    }

    .profile-image-pic {
        height: 200px;
        width: 200px;
        object-fit: cover;
    }



    .cardbody-color {
        background-color: #ebf2fa;
    }

    a {
        text-decoration: none;
    }
    
</style>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h2 class="text-center text-dark mt-5">Vem comprar com a gente!</h2>
                <div class="text-center mb-5 text-dark">Faça seu cadastro!</div>
                <div class="card my-5">

                    <form asp-controller="Usuario" asp-action="UserCreated" class="card-body cardbody-color p-lg-5">

                        <div class="text-center">
                            <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                                 width="200px" alt="profile">
                        </div>
                        <div class="mb-3">
                            <input type="text" class="form-control" id="UserName" asp-for="Name" aria-describedby="emailHelp"
                                   placeholder="Nome">
                            <small class ="erro " id="TextNome"></small>
                        </div>


                        <div class="mb-3">
                            <input type="text" class="form-control" id="UserEmail" asp-for=Email aria-describedby="emailHelp"
                                   placeholder="Email">
                            
                            <small class="erro" id="TextEmail"></small>
                        </div>


                        <div class="mb-3">
                            <input type="password" class="form-control" id="UserPassword" asp-for="Password" placeholder="Senha">
                            <small class="erro" id="TextPassword"></small>
                        </div>


                        <div class="mb-3">
                            <input type="password" class="form-control" id="ConfirmPassword" name="Confirmacao" placeholder="Confirme sua senha">
                          
                            <small class="erro" id="TextConfirmPassword"></small>
                        </div>


                        <div class="text-center"><button type="submit" class="btn btn-color px-5 mb-5 w-100">Criar Conta</button></div>

                        <small class="erro" id="TextForm"></small>
                        
                        <div id="emailHelp" class="form-text text-center mb-5 text-dark">
                           
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <script src="/js/validator.js"></script>
    
</body>
